<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="updatedemo.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="updatedemo.Perspective"
            id="updatedemo.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="updatedemo.View"
            id="updatedemo.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="updatedemo.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
         <menu
               id="help"
               label="Help">
            <command
                  commandId="org.eclipse.ui.update.manageConfiguration2"
                  label="Manager Configuration"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.update.findAndInstallUpdates2"
                  label="Find And Install Updates"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="updatedemo.application"
            name="UpdateDemoProduct">
         <property
               name="appName"
               value="UpdateDemoProduct">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.update.internal.ui.views.ManageConfigurationHandler"
            commandId="org.eclipse.ui.update.manageConfiguration2">
      </handler>
      <handler
            class="org.eclipse.update.internal.ui.views.FindAndInstallHandler"
            commandId="org.eclipse.ui.update.findAndInstallUpdates2">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="org.eclipse.ui.update.manageConfiguration2"
            name="Manager Configuration">
      </command>
      <command
            id="org.eclipse.ui.update.findAndInstallUpdates2"
            name="Find And Install Updates">
      </command>
   </extension>
</plugin>
